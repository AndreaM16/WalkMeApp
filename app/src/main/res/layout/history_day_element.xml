<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/generic_list_item_height">

    <RelativeLayout
        android:id="@+id/menu_item_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/generic_list_item_height"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:id="@+id/item_text_box"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:minLines="1"
                android:text="28-DIC"
                android:textColor="@color/grey"
                android:textSize="@dimen/generic_list_main_text"/>

            <TextView
                android:id="@+id/item_subtext"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_text"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:minLines="1"
                android:text="28-DIC"
                android:textColor="@color/grey"
                android:textSize="@dimen/generic_list_subtext"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/item_text_box"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_share_black_24dp"/>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_clear_black_24dp"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"/>
</RelativeLayout>